-- 9. CHÈN KEYWORD MAPPING (Map vào Tên Mới)
INSERT INTO Keyword_Product_Mapping (keyword_id, product_id, priority)
SELECT k.keyword_id, p.product_id, t.priority
FROM Hot_Keywords k
JOIN Products p
JOIN (
    -- Áo thun
    SELECT 'áo thun unisex' as k_text, 'T-Shirt Cotton Compact Premium' as p_name, 1 as priority
    UNION ALL SELECT 'áo thun unisex', 'Tee Oversize Graphic Art', 2
    
    -- Giảm giá
    UNION ALL SELECT 'giảm giá sốc', 'Jogger Sporty Stripe', 1
    UNION ALL SELECT 'giảm giá sốc', 'Polo Luxury Black Gold', 2
    UNION ALL SELECT 'giảm giá sốc', 'Quần Jean Hack Dáng Wide-Leg', 3
    
    -- Quần Jean
    UNION ALL SELECT 'quần jean', 'Quần Jean Hack Dáng Wide-Leg', 1
    UNION ALL SELECT 'quần jean', 'Quần Kaki Olive Slimfit', 2
    
    -- Best Seller
    UNION ALL SELECT 'best seller', 'Polo Luxury Black Gold', 1
    UNION ALL SELECT 'best seller', 'Quần Âu Tuyết Mưa Minimalist', 2
    UNION ALL SELECT 'best seller', 'Polo Signature Teal Blue', 3
    UNION ALL SELECT 'best seller', 'Clutch Cầm Tay Pearl White', 4
    UNION ALL SELECT 'best seller', 'Suit Korea Style Beige', 5
    
    -- Combo
    UNION ALL SELECT 'combo tiết kiệm', 'Set Phối: Modern Lady', 1
    UNION ALL SELECT 'combo tiết kiệm', 'Set Phối: Sweet Weekend', 2
    UNION ALL SELECT 'combo tiết kiệm', 'Set Phối: All Black Cool', 3
    UNION ALL SELECT 'combo tiết kiệm', 'Set Phối: Elegant Boss', 4
    UNION ALL SELECT 'combo tiết kiệm', 'Set Phối: Summer Vibe', 5

) t ON k.keyword_text = t.k_text AND p.product_name = t.p_name;

