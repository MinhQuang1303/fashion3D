-- 4. CHÈN PRODUCT_VARIANTS (Biến thể)
INSERT INTO Product_Variants (product_id, color, size, stock, sku)
SELECT p.product_id, t.color, t.size, t.stock, t.sku
FROM Products p
JOIN (
    -- Áo Nam A1, A2, Q1, Vest V1, CB1, Ví V1, V2 (Đã chuẩn hóa)
    SELECT 'T-Shirt Cotton Compact Premium' as name, 'Trắng' as color, 'M' as size, 50 as stock, 'A1-TRANG-M' as sku
    UNION ALL SELECT 'T-Shirt Cotton Compact Premium', 'Trắng', 'L', 50, 'A1-TRANG-L'
    UNION ALL SELECT 'T-Shirt Cotton Compact Premium', 'Đen', 'M', 50, 'A1-DEN-M'
    UNION ALL SELECT 'Polo Signature Teal Blue', 'Xanh Teal', 'M', 30, 'A2-TEAL-M'
    UNION ALL SELECT 'Polo Signature Teal Blue', 'Xanh Teal', 'L', 30, 'A2-TEAL-L'
    UNION ALL SELECT 'Quần Âu Tuyết Mưa Minimalist', 'Đen', '29', 40, 'Q1-DEN-29'
    UNION ALL SELECT 'Quần Âu Tuyết Mưa Minimalist', 'Đen', '30', 40, 'Q1-DEN-30'
    UNION ALL SELECT 'Quần Âu Tuyết Mưa Minimalist', 'Đen', '31', 40, 'Q1-DEN-31'
    UNION ALL SELECT 'Suit Gentleman Black', 'Đen', '48', 20, 'V1-DEN-48'
    UNION ALL SELECT 'Suit Gentleman Black', 'Đen', '50', 20, 'V1-DEN-50'
    UNION ALL SELECT 'Set Phối: Modern Lady', 'Mặc định', 'FreeSize', 20, 'CB1-FREE'
    UNION ALL SELECT 'Clutch Cầm Tay Pearl White', 'Trắng', 'OneSize', 100, 'V1-TRANG'
    UNION ALL SELECT 'Ví Da Bò Classic Brown', 'Nâu', 'OneSize', 100, 'V2-NAU'
    
    -- Giày Dép Nam (D Series)
    UNION ALL SELECT 'Sandal Thể Thao Active Black' as name, 'Đen' as color, '40' as size, 50 as stock, 'D1-DEN-40' as sku
    UNION ALL SELECT 'Sandal Thể Thao Active Black', 'Đen', '42', 50, 'D1-DEN-42'
    UNION ALL SELECT 'Dép Marvel Edition', 'Đen', '41', 30, 'D2-DEN-41'
    UNION ALL SELECT 'Dép Marvel Edition', 'Đen', '43', 30, 'D2-DEN-43'
    
    -- Giày Dép Nữ (DN Series)
    UNION ALL SELECT 'Sneaker Nữ Fashion Style', 'Hồng Pastel', '37', 40, 'DN1-HONG-37'
    UNION ALL SELECT 'Sneaker Nữ Fashion Style', 'Xanh Mint', '38', 40, 'DN1-MINT-38'
    UNION ALL SELECT 'Giày Thể Thao Training Gym', 'Đen', '36', 60, 'DN2-DEN-36'
    UNION ALL SELECT 'Giày Thể Thao Training Gym', 'Đen', '37', 60, 'DN2-DEN-37'

) t ON p.product_name = t.name;

-- 5. CHÈN VARIANT MẶC ĐỊNH (Quan trọng để các sản phẩm còn lại không lỗi)
INSERT INTO Product_Variants (product_id, color, size, stock, sku)
SELECT p.product_id, 'Mặc định', 'FreeSize', 50, CONCAT('DEF-', p.product_id)
FROM Products p
LEFT JOIN Product_Variants pv ON p.product_id = pv.product_id
WHERE pv.variant_id IS NULL;

